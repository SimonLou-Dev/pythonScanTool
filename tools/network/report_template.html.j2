<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Capture Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            line-height: 1.6;
        }
        h1, h2 {
            color: #333;
        }
        .section {
            margin-bottom: 20px;
        }
        .section h2 {
            color: #555;
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
        }
        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 10px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f9f9f9;
        }
        .highlight {
            color: red;
            font-weight: bold;
        }
        ul {
            list-style-type: square;
            margin-left: 20px;
        }
        p {
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <h1>Capture Report</h1>
    <p><strong>Date:</strong> {{ timestamp }}</p>

    <div class="section">
        <h2>Capture Mode</h2>
        <p>
            Mode: <strong>{{ mode.value }}</strong><br>
            {% if mode.number == 0 %}
            Interface: <strong>{{ interface }}</strong>
            {% elif mode.number == 1 %}
            PCAP File: <strong>{{ pcap_file }}</strong>
            {% endif %}
        </p>
    </div>

    <div class="section">
        <h2>Activated Options</h2>
        <ul>
            <li>Fuzzing: <strong>{{ options.fuzzing }}</strong></li>
            <li>Password Search: <strong>{{ options.passwords }}</strong></li>
            <li>Credential Search: <strong>{{ options.creds }}</strong></li>
        </ul>
    </div>

    {% if mode.number == 0 %}
    <div class="section">
        <h2>Save Settings</h2>
        <p>
            Enabled: <strong>{{ save.state }}</strong><br>
            {% if save.state %}
            File: <strong>{{ save.file }}</strong>
            {% endif %}
        </p>
    </div>
    {% endif %}

    <div class="section">
        <h2>Credentials Found</h2>
        {% if results.creds %}
        <table>
            <tr>
                <th>url</th>
                <th>secret</th>
            </tr>
            {% for cred in results.creds %}
            <tr>
                <td>{{ cred.url }}</td>
                <td>{{ cred.secret }}</td>
            </tr>
            {% endfor %}
        </table>
        {% else %}
        <p>No credentials found.</p>
        {% endif %}
    </div>

    <div class="section">
        <h2>Scanner Results</h2>
        <h3>ARP Scan</h3>
        {% if results.arp_scan %}
        <table>
            <tr>
                <th>Source (IP)</th>
                <th>Detections</th>
            </tr>
            {% for entry in results.arp_scan %}
            <tr>
                <td>{{ entry.src }}</td>
                <td>{{ entry.occ }}</td>
            </tr>
            {% endfor %}
        </table>
        {% elif not options.passwords and not options.creds %}
        <p>Fuzz scan disabled.</p>
        {% else %}
        <p>No results for ARP Scan.</p>
        {% endif %}

        <h3>ICMP Scan</h3>
        {% if results.icmp_scan %}
        <table>
            <tr>
                <th>Source (IP)</th>
                <th>Detections</th>
            </tr>
            {% for entry in results.icmp_scan %}
            <tr>
                <td>{{ entry.src }}</td>
                <td>{{ entry.occ }}</td>
            </tr>
            {% endfor %}
        </table>
        {% else %}
        <p>No results for ICMP Scan.</p>
        {% endif %}

        <h3>Port Scan</h3>
        {% if results.port_scan %}
        <table>
            <tr>
                <th>Source (IP)</th>
                <th>Detections</th>
            </tr>
            {% for entry in results.port_scan %}
            <tr>
                <td>{{ entry.src }}</td>
                <td>{{ entry.occ }}</td>
            </tr>
            {% endfor %}
        </table>
        {% else %}
        <p>No results for Port Scan.</p>
        {% endif %}

        <h3>Fuzzing Scan</h3>
        {% if results.fuzz_scan %}
        <table>
            <tr>
                <th>Source (IP)</th>
                <th>Detections</th>
            </tr>
            {% for entry in results.fuzz_scan %}
            <tr>
                <td>{{ entry.src }}</td>
                <td>{{ entry.occ }}</td>
            </tr>
            {% endfor %}
        </table>
        {% elif not options.fuzzing %}
        <p>Fuzz scan disabled.</p>
        {% else %}
        <p>No results for Fuzzing Scan.</p>
        {% endif %}
    </div>
</body>
</html>
